@{
	ViewData["Title"] = "Upload Claims";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="d-flex justify-content-between align-items-center mb-4">
				<div>
					<h1 class="h3 mb-0 text-brown">Upload Claims</h1>
					<p class="text-muted mb-0">Upload CSV file or create sample claims for demonstration</p>
				</div>
				<div>
					<a asp-action="Index" class="btn btn-outline-secondary">
						<i class="fas fa-arrow-left me-2"></i>Back to Claims
					</a>
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-6">
					<div class="card shadow-sm">
						<div class="card-header bg-light">
							<h5 class="card-title mb-0 text-brown">Upload CSV File</h5>
						</div>
						<div class="card-body">
							<form asp-action="Upload" method="post" enctype="multipart/form-data">
								@Html.AntiForgeryToken()
								
								<div class="mb-3">
									<label for="file" class="form-label">Select CSV File</label>
									<input type="file" class="form-control" id="file" name="file" accept=".csv">
									<div class="form-text">
										CSV should contain: ClaimNumber, ClaimantName, Address, Amount
									</div>
								</div>
								
								<button type="submit" class="btn btn-primary">
									<i class="fas fa-upload me-2"></i>Upload File
								</button>
							</form>
						</div>
					</div>
				</div>
				
				<div class="col-md-6">
					<div class="card shadow-sm">
						<div class="card-header bg-light">
							<h5 class="card-title mb-0 text-brown">Quick Demo</h5>
						</div>
						<div class="card-body">
							<p class="text-muted">
								Create sample claims to demonstrate the orchestration system functionality.
							</p>
							
							<form asp-action="Upload" method="post">
								@Html.AntiForgeryToken()
								<button type="submit" class="btn btn-success">
									<i class="fas fa-magic me-2"></i>Create Sample Claims
								</button>
							</form>
							
							<hr>
							
							<div class="alert alert-info">
								<h6 class="alert-heading">
									<i class="fas fa-info-circle me-2"></i>Sample Data Includes:
								</h6>
								<ul class="mb-0">
									<li>5 sample claims with different amounts</li>
									<li>Various statuses for demonstration</li>
									<li>Realistic claim data for testing</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<div class="row mt-4">
				<div class="col-12">
					<div class="card shadow-sm">
						<div class="card-header bg-light">
							<h5 class="card-title mb-0 text-brown">CSV Format Example</h5>
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-sm table-bordered">
									<thead class="table-light">
										<tr>
											<th>ClaimNumber</th>
											<th>ClaimantName</th>
											<th>Address</th>
											<th>Amount</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<td>CLM-001</td>
											<td>John Smith</td>
											<td>123 Main St, Anytown, CA 90210</td>
											<td>2500.00</td>
										</tr>
										<tr>
											<td>CLM-002</td>
											<td>Jane Doe</td>
											<td>456 Oak Ave, Somewhere, NY 10001</td>
											<td>1500.00</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div> 